		}

		if (FlxG.save.data.chartingbackground)
			stage();
		gridBG = FlxGridOverlay.create(GRID_SIZE, GRID_SIZE, GRID_SIZE * 8, GRID_SIZE * 16);
		add(gridBG);

		leftIcon = new HealthIcon(_song.player1.toLowerCase());
